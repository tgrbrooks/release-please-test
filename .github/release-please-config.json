{
    "separate-pull-requests": true,
    "pull-request-header": "Header",
    "pull-request-footer": "Footer",
    "bump-minor-pre-major": true,
    "changelog-sections": [
      { "type": "feat", "section": "Features" },
      { "type": "feature", "section": "Features" },
      { "type": "fix", "section": "Bug Fixes" },
      { "type": "perf", "section": "Performance Improvements" },
      { "type": "revert", "section": "Reverts" },
      { "type": "docs", "section": "Documentation" },
      { "type": "style", "section": "Styles" },
      { "type": "chore", "section": "Miscellaneous Chores" },
      { "type": "refactor", "section": "Code Refactoring" },
      { "type": "test", "section": "Tests" },
      { "type": "build", "section": "Build System" },
      { "type": "ci", "section": "Continuous Integration"}
    ],
    "packages": {
        ".": {
            "component": "root",
            "release-type": "node",
            "exclude-paths": ["packages/release-please-test-pkg"],
            "bootstrap-sha": "35465fb228f76a87ebd57686a8b4aa23cb153662"
        },
        "packages/release-please-test-pkg": {
            "component": "package",
            "release-type": "node",
            "changelog-path": "packages/release-please-test-pkg/CHANGELOG.md",
            "exclude-paths": ["src"]
        }
    }
}
